<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capsulestudio.dailynote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/diary"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.GLogIn"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.TextNoteActivity" />
        <activity android:name=".Activity.ImageNoteActivity" />
        <activity android:name=".Activity.AddTextNoteActivity" />
        <activity android:name=".Activity.AddImageNoteActivity" />
        <activity android:name=".Activity.TextNoteDetailsActivity" />
        <activity android:name=".Activity.ImageNoteDetailsActivity" />
        <activity android:name=".Activity.UpdateImageNoteActivity" />
        <activity android:name=".Activity.UpdateTextNoteActivity" />
        <activity android:name=".Activity.SettingsPrefActivity" />
        <activity android:name=".Activity.PasswordActivity" />
        <activity android:name=".Activity.ChangePasswordActivity"></activity>
    </application>

</manifest>